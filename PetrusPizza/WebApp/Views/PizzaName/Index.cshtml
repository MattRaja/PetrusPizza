@model IEnumerable<PublicApi.DTO.v1.PizzaNameDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Pizzas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameOfPizza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultToppings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.CreatedBy) *@
            @* </th> *@
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.CreatedAt) *@
            @* </th> *@
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.ChangedBy) *@
            @* </th> *@
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.ChangedAt) *@
            @* </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfPizza)
            </td>
            @foreach(var defaultTopping in item.DefaultToppings)
            {
                <td>
                    @Html.DisplayFor(modelItem => defaultTopping)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.CreatedBy) *@
            @* </td> *@
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.CreatedAt) *@
            @* </td> *@
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.ChangedBy) *@
            @* </td> *@
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.ChangedAt) *@
            @* </td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
